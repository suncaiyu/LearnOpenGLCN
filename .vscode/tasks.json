{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "F:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "../glad.c",
                "../Shader.h",
                "../Camera.h",
                "../stb_image.h",
                "../stb_image.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "D:\\C++Project\\LearnOpenGL\\includes\\",
                "-L",
                "F:\\glfw-3.3\\glfw-3.3\\lib\\",
                "-l",
                "glfw3",
                "-l",
                "opengl32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
